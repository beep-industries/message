          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden - Not the server owner"
          },
          "404": {
            "description": "Server not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "delete": {
        "tags": [
